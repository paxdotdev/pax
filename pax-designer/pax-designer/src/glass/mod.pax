<Group
    @mouse_move=handle_mouse_move
    @mouse_up=handle_mouse_up
    @wheel=handle_wheel
    @drop=handle_drop
>
    <WireframeEditor/>

    // -------------- tool editing visuals --------------



    // Rectangle visual
    <Group>
        <Rectangle id=rect_tool
            x={self.tool_visual.rect_tool.x}
            y={self.tool_visual.rect_tool.y}
            width={self.tool_visual.rect_tool.width}
            height={self.tool_visual.rect_tool.height}
            raycast=false
        />
    </Group>

    // Outline visual
    <Group>
        <Path 
            elements={self.tool_visual.outline}
            stroke={
                color: BLUE
                width: 2px
            }
            fill=TRANSPARENT
            raycast=false
        />
    </Group>

    // ------------------------------------------------
  
    <Rectangle id=backing_plate  @mouse_down=handle_mouse_down/>
</Group>

@settings {
    @mount: on_mount,
    @pre_render: on_pre_render,
    @key_down: handle_key_down,
    @key_up: handle_key_up,
    @double_click: handle_double_click
    @context_menu: self.context_menu

    #backing_plate {
        //this Rectangle is the event-intercepting, invisible baselayer of glass â€” it must
        //exist in order to intercept events from the rendering layer underneath
        //(Note an alternative could be a flag passed to Group which toggles its `is_invisible_to_raycasting`)
        fill: TRANSPARENT
    }

    #project {
        x: 265px,
        y: 65px,
        width: {100% - 700px},
        height: {100% - 65px},
    }

    .control_point {
        stroke: {
            color: BLUE
            width: 1px
        }
        fill:  WHITE
        width: 7px
        height: 7px
        anchor_x: 50%
        anchor_y: 50%
    }

    #rect_tool {
        stroke: {
            color: {self.tool_visual.rect_tool.stroke}
            width: 1px
        }
        fill: {self.tool_visual.rect_tool.fill}
    }
}
