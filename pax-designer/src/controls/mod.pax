//The Controls layer describes the frame of UI around a
//project being edited in the designer

<Group id=left_panel>
    // <Stacker> (TODO: use Stacker instead of sized Groups below)
        <Group height=65px >
            <Logobar id=logobar />
            <Rectangle class=black_bg />
        </Group>
        <Group height=85px y=65px >
            <FileAndComponentPicker id=file_and_component_picker />
            <Rectangle class=black_bg />
        </Group>
        <Group y=150px height={100% - 150px}>
            <Tree id=tree />
            <Rectangle class=black_bg />
        </Group>
    // </Stacker>
    <Rectangle class=black_bg />
</Group>

<Group id=right_panel>
    <Settings id=settings />
    <Rectangle class=black_bg  />
</Group>

<Group id=top_panel>
    <Toolbar id=toolbar />
    <Rectangle class=black_bg />
</Group>

@settings {
    #left_panel {
        width: 240px,
    }

    #top_panel {
        height: 60px,
        x: 240px,
        width: {100% - 240px}
    }

    #right_panel {
        width: 240px,
        anchor_x: 100%,
        x: 100%,
        y: 55px,
        height: {100% - 60px}
    }

    .black_bg {
        fill: rgb(10%, 10%, 10%)
    }
}
