<Frame width=50%>
	<Group width=200%>
		<Button x=50% y=30% width=10% height=10%/>
	</Group>
</Frame>

<Scroller scroll_height=200% x=100% width=50%>
	<Group x=100% width=200%>
		<Button x=50% y=70% width=10% height=10%/>
	</Group>
	<Button x=0% anchor_x=50% y=90% width=10% height=10%/>
</Scroller>

@settings {
     @pre_render: handle_pre_render,
    #text {
        style: {
                font: {Font::system("Times New Roman", FontStyle::Normal, FontWeight::Bold)},
                font_size: 22px,
                fill: WHITE,
                align_vertical: TextAlignVertical::Center,
                align_horizontal: TextAlignHorizontal::Center,
                align_multiline: TextAlignHorizontal::Center
        }
    }
}
