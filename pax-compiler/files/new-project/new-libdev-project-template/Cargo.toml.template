[package]
name = "CRATE_NAME"
version = "VERSION_PLACEHOLDER"
edition = "2021"
default-run = "run"

[dependencies]
pax-engine = { version="VERSION_PLACEHOLDER", path="../../../pax-engine" }
pax-std = { version="VERSION_PLACEHOLDER", path="../../../pax-std" }

[lib]
crate-type = ["cdylib", "rlib"]
name = "paxcartridge"

[[bin]]
name = "parser"
path = "src/lib.rs"
required-features = ["parser"]

[[bin]]
name = "run"
path = "bin/run.rs"

[features]
parser = ["pax-std/parser", "pax-engine/parser"]
designtime = ["pax-engine/designtime"]
web = ["pax-engine/web"]
macos = ["pax-engine/macos"]
ios = ["pax-engine/ios"]

[profile.release]
lto = true
opt-level = "z"

[profile.dev.package."*"]
debug = false

