<Path class=bounding_segment/>

@settings {
    .bounding_segment {
	    segments: {[
	        PathSegment::line(
				LineSegmentData::new(
		            Point::new(0px, 0px),
		            Point::new(40%, 40%)
				)
	        )
	    ]},
		stroke: {
            color: GREEN,
            width: 10px
        },
    }
}
<Rectangle width=50% height=50%
    fill=RED
    stroke={
        color: GREEN,
        width: 10px
    }
 />
